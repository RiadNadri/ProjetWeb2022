{% extends "base.html.twig" %}


{% block title %}Inscription{% endblock %}

<header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="index.html" class="logo">
                            JNM
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="scroll-to-section"><a href="#top" >Accueil</a></li>
                            <li class="scroll-to-section"><a href="#about">À propos</a></li>
                            <li class="scroll-to-section"><a href="#connexion">Connexion</a></li>
                            <li class="scroll-to-section"><a href="#contact-us" class="active">Contactez-Nous</a></li>
                        </ul>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>

{% block body %}
    
<section class="section" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="left-text-content">
                        <div class="section-heading">
                            <h6>Inscrivez-vous aux <br>Journées Nationales <br>de la MIAGE</h6>
                        </div>
                        
                    </div>
                    
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="right-text-content">
                        {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.nom) }}
                            {{ form_row(registrationForm.prenom) }}
                            {{ form_row(registrationForm.date_naissance) }}
                            {{ form_row(registrationForm.adresse) }}
                            {{ form_row(registrationForm.refMiage, {
                                label:'Miage de provenance'
                            })    }}
                            {{ form_row(registrationForm.statut, {
                                label:'Statut(s)'
                            })    }}
                            {{ form_row(registrationForm.telephone) }}
                            {{ form_row(registrationForm.email, {
                                label: 'E-mail'
                            }) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Mot de passe'
                            }) }}
                            {{ form_row(registrationForm.agreeTerms) }}

                            <button type="submit" class="btn">Register</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
