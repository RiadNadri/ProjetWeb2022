{% extends 'base.html.twig' %}

{% block title %}Modification de profil{% endblock %}

{% block body %}
<section class="section" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="left-text-content">
                        <div class="section-heading ml-5 mt-5">
                            <h6>Modifiez votre<br>profil
                        </div>
                        
                    </div>
                    
                </div>

                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="right-text-content">
                        {{ form_start(editType) }}
                            {{ form_row(editType.nom) }}
                            {{ form_row(editType.prenom) }}
                            {{ form_row(editType.adresse) }}
                            {{ form_row(editType.refMiage, {
                                label:'Miage de provenance'
                            })    }}
                            {{ form_row(editType.statut, {
                                label:'Statut'
                            })    }}
                                {{ form_row(editType.telephone) }}
                            
                            {{ form_row(editType.email, {
                                label: 'E-mail'
                            }) }}
                            {{ form_row(editType.password, {
                                label: 'Mot de passe'
                            }) }}
                            <button type="submit" class="btn btn-primary my-3">Sauvegarder les modifications</button>
                        {{ form_end(editType) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}